<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    app:cardElevation="6dp"
    app:cardCornerRadius="12dp"
    android:background="@android:color/transparent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:background="@drawable/card_back">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/item_idTVTime"
            android:gravity="center"
            android:padding="4dp"
            android:text="Time"
            android:textColor="@color/white"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/item_idTVTemperature"
            android:layout_below="@id/item_idTVTime"
            android:gravity="center"
            android:text="20"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textAlignment="center"/>

        <ImageView
            android:id="@+id/item_idIVCondition"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/item_idTVTemperature"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:padding="4dp"
            android:src="@mipmap/ic_launcher"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_idIVCondition"
            android:id="@+id/item_idTVWindSpeed"
            android:layout_centerHorizontal="true"
            android:layout_margin="4dp"
            android:gravity="center"
            android:padding="3dp"
            android:text="13"
            android:textAlignment="center"
            android:textColor="@color/white"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>